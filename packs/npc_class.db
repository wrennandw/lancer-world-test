{"type":"npc_class","name":"MONSTROSITY","img":"systems/lancer/assets/icons/npc_class.svg","system":{"lid":"npcc_monstrosity","name":"MONSTROSITY","role":"biological","info":{"flavor":"Monstrosities are especially large or horrifying natural predators. Although they are usually wild, some monstrosities can be domesticated and trained for combat: such creatures are in high demand along the furthest reaches of the galaxy.","tactics":""},"power":100,"base_features":[{"id":"","fallback_lid":"npcf_unique_physiology_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_deadliest_game_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_claws_monstrosity","type":"npc_feature","reg_name":"comp_core"}],"optional_features":[{"id":"","fallback_lid":"npcf_acid_spittle_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_adhesive_secretions_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_burrower_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_corrosive_bite_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_grasping_claws_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_natural_camouflage_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_rampage_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_regenerator_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_spined_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_swift_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_tempered_hide_monstrosity","type":"npc_feature","reg_name":"comp_core"},{"id":"","fallback_lid":"npcf_winged_monstrosity","type":"npc_feature","reg_name":"comp_core"}],"base